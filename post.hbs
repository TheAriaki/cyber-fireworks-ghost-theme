{{!-- Post template --}}

<article class="article-post {{post_class}}">
    
    {{!-- Post header --}}
    <header class="article-header">
        {{#if feature_image}}
        <div class="article-image">
            <img src="{{img_url feature_image size="xl"}}" alt="{{title}}">
        </div>
        {{/if}}
        
        <div class="article-header-content">
            {{#primary_tag}}
            <a href="{{url}}" class="article-tag">{{name}}</a>
            {{/primary_tag}}
            
            <h1 class="article-title">{{title}}</h1>
            
            {{#if custom_excerpt}}
            <p class="article-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            
            <div class="article-meta">
                <div class="article-author">
                    {{#primary_author}}
                    {{#if profile_image}}
                    <img src="{{img_url profile_image size="s"}}" 
                         alt="{{name}}" 
                         class="author-avatar">
                    {{/if}}
                    <div class="author-info">
                        <a href="{{url}}" class="author-name">{{name}}</a>
                        {{#if bio}}
                        <p class="author-bio">{{bio}}</p>
                        {{/if}}
                    </div>
                    {{/primary_author}}
                </div>
                
                <div class="article-stats">
                    <time class="article-date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="MMM DD, YYYY"}}
                    </time>
                    <span class="article-reading-time">{{reading_time}}</span>
                </div>
            </div>
        </div>
    </header>
    
    {{!-- Post content --}}
    <div class="article-content">
        {{content}}
    </div>
    
    {{!-- Post footer --}}
    <footer class="article-footer">
        {{!-- Tags --}}
        {{#if tags}}
        <div class="article-tags">
            <span class="tags-label">Tagged in:</span>
            {{#foreach tags}}
            <a href="{{url}}" class="tag-link">{{name}}</a>
            {{/foreach}}
        </div>
        {{/if}}
        
        {{!-- Author bio --}}
        {{#primary_author}}
        <div class="author-card">
            {{#if profile_image}}
            <img src="{{img_url profile_image size="m"}}" 
                 alt="{{name}}" 
                 class="author-card-avatar">
            {{/if}}
            <div class="author-card-content">
                <h4 class="author-card-name">
                    <a href="{{url}}">{{name}}</a>
                </h4>
                {{#if bio}}
                <p class="author-card-bio">{{bio}}</p>
                {{/if}}
                <div class="author-card-meta">
                    {{#if location}}
                    <span class="author-location">{{location}}</span>
                    {{/if}}
                    {{#if website}}
                    <a href="{{website}}" class="author-website" target="_blank" rel="noopener">Website</a>
                    {{/if}}
                    {{#if twitter}}
                    <a href="{{twitter_url twitter}}" class="author-twitter" target="_blank" rel="noopener">Twitter</a>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/primary_author}}
        
        {{!-- Comments --}}
        {{#if @site.comments_enabled}}
        <div id="comments" class="comments-section">
            {{comments}}
        </div>
        {{/if}}
        
        {{!-- Related posts --}}
        {{#get "posts" limit="3" filter="tag:{{primary_tag.slug}}+id:-{{id}}" as |related_posts|}}
        {{#if related_posts}}
        <section class="related-posts">
            <h3 class="related-posts-title">Related Posts</h3>
            <div class="related-posts-grid">
                {{#foreach related_posts}}
                <article class="related-post-card">
                    {{#if feature_image}}
                    <a href="{{url}}" class="related-post-image">
                        <img src="{{img_url feature_image size="s"}}" alt="{{title}}">
                    </a>
                    {{/if}}
                    <div class="related-post-content">
                        <h4 class="related-post-title">
                            <a href="{{url}}">{{title}}</a>
                        </h4>
                        <time class="related-post-date">{{date format="MMM DD, YYYY"}}</time>
                    </div>
                </article>
                {{/foreach}}
            </div>
        </section>
        {{/if}}
        {{/get}}
        
        {{!-- Subscribe CTA --}}
        {{#if @site.members_enabled}}
        <div class="subscribe-cta">
            <h3>Never miss a post</h3>
            <p>Subscribe to get the latest content by email.</p>
            <a href="#/portal/signup" class="subscribe-button" data-portal="signup">
                Subscribe
            </a>
        </div>
        {{/if}}
    </footer>
    
</article> 