{
  "name": "cyber-fireworks-ghost-theme",
  "description": "A futuristic Ghost theme with cyber fireworks effects",
  "demo": "https://github.com/TheAriaki/cyber-fireworks-ghost-theme",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "author": {
    "name": "Ariaki",
    "email": "admin@ariaki.me",
    "url": "https://ariaki.me"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine",
      "Technology"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "responsive",
    "cyber",
    "fireworks",
    "futuristic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TheAriaki/cyber-fireworks-ghost-theme.git"
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "zip": "gulp zip",
    "clean": "gulp clean",
    "watch": "gulp watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "del": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-livereload": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "postcss": "^8.4.24",
    "pump": "^3.0.0",
    "sass": "^1.63.6"
  },
  "config": {
    "posts_per_page": 6,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "enable_fireworks": {
        "type": "boolean",
        "default": true,
        "description": "Enable cyber fireworks background effect"
      },
      "fireworks_intensity": {
        "type": "select",
        "options": ["low", "medium", "high"],
        "default": "medium",
        "description": "Fireworks effect intensity"
      },
      "primary_color": {
        "type": "color",
        "default": "#ff3366",
        "description": "Primary theme color"
      }
    }
  }
} 