{{!-- Site footer --}}
<footer class="site-footer">
    <div class="site-footer-inner">
        
        {{!-- Footer navigation --}}
        <div class="footer-section footer-nav">
            <h4 class="footer-title">Navigation</h4>
            {{navigation type="secondary"}}
        </div>
        
        {{!-- About section --}}
        <div class="footer-section footer-about">
            <h4 class="footer-title">{{@site.title}}</h4>
            {{#if @site.description}}
            <p class="footer-description">{{@site.description}}</p>
            {{/if}}
            
            {{!-- Social links --}}
            {{#if @site.facebook}}
            <a href="{{facebook_url @site.facebook}}" class="social-link" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
            </a>
            {{/if}}
            
            {{#if @site.twitter}}
            <a href="{{twitter_url @site.twitter}}" class="social-link" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
            </a>
            {{/if}}
        </div>
        
        {{!-- Newsletter signup --}}
        {{#if @site.members_enabled}}
        <div class="footer-section footer-subscribe">
            <h4 class="footer-title">Stay Updated</h4>
            <p class="footer-subscribe-text">Get the latest posts delivered right to your inbox.</p>
            <a href="#/portal/signup" class="footer-subscribe-btn" data-portal="signup">
                Subscribe
            </a>
        </div>
        {{/if}}
        
    </div>
    
    {{!-- Footer bottom --}}
    <div class="footer-bottom">
        <div class="footer-bottom-inner">
            <div class="footer-copyright">
                <p>&copy; {{date format="YYYY"}} {{@site.title}}. All rights reserved.</p>
            </div>
            
            <div class="footer-meta">
                <span>Powered by <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a></span>
                <span>â€¢</span>
                <span>Theme: Cyber Fireworks</span>
            </div>
        </div>
    </div>
    
</footer> 