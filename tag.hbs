{{!-- Tag archive template --}}

<header class="archive-header">
    <div class="archive-header-content">
        <span class="archive-type">Tag</span>
        <h1 class="archive-title">{{tag.name}}</h1>
        {{#if tag.description}}
        <p class="archive-description">{{tag.description}}</p>
        {{/if}}
        <div class="archive-meta">
            <span class="post-count">{{pagination.total}} {{plural pagination.total empty='posts' singular='post' plural='posts'}}</span>
        </div>
    </div>
</header>

<section class="posts-section">
    <div class="posts-container">
        {{#foreach posts}}
            <article class="post-card {{post_class}}">
                {{#if feature_image}}
                <a href="{{url}}" class="post-card-image-link">
                    <img class="post-card-image" 
                         src="{{img_url feature_image size="m"}}" 
                         alt="{{title}}"
                         loading="lazy">
                </a>
                {{/if}}
                
                <div class="post-card-content">
                    <div class="post-card-meta">
                        <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                            {{date format="MMM DD, YYYY"}}
                        </time>
                    </div>
                    
                    <h2 class="post-card-title">
                        <a href="{{url}}">{{title}}</a>
                    </h2>
                    
                    {{#if excerpt}}
                    <p class="post-card-excerpt">{{excerpt words="25"}}</p>
                    {{/if}}
                    
                    <div class="post-card-footer">
                        <div class="post-card-author">
                            {{#primary_author}}
                            {{#if profile_image}}
                            <img src="{{img_url profile_image size="xs"}}" 
                                 alt="{{name}}" 
                                 class="author-avatar">
                            {{/if}}
                            <span class="author-name">{{name}}</span>
                            {{/primary_author}}
                        </div>
                        
                        <div class="post-card-stats">
                            <span class="reading-time">{{reading_time}}</span>
                        </div>
                    </div>
                </div>
            </article>
        {{/foreach}}
    </div>
</section>

